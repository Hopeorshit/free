.container{
  display: flex;
  flex-direction: column;
  background-color: #ffff;
  padding: 0

}

image{
  height: 375rpx;
  width: 100%
}
.content{
  display: flex;
  flex-direction: column;
  margin-top:30rpx;
  border-bottom: 1rpx solid #c1bac1;
  width: 100%
 
}
.neirong{
font-size:36rpx;
color:#666f6c;
margin-left:40rpx
}
.date{
  font-size:24rpx;
  color:#c1bac1;
  margin-top:20rpx;
  margin-bottom: 20rpx;
  margin-left: 40rpx
}
.user{
  display: flex;
  flex-direction: row;
  margin-top:20rpx;
  margin-bottom: 20rpx;
  width: 90%;
  justify-content: space-between;
  align-items: center

}
.user1{
   display: flex;
   flex-direction: row;
   align-items: center
}
.user image{
  width: 70rpx;
  height: 70rpx;
   border-radius: 50%
}
.user text{
  color:#aaa;

}
.share{
  position: absolute;
  bottom: 0;
  height: 140rpx;
  width: 100%;
  background-color: #fff
}
.sharebtn{
  width: 675rpx;
  height: 100rpx;
  margin-top:20rpx;
  margin-left: 37rpx;
  background-color:#c1bac1
  
}
.share button{
  background-color: #c1bac1;
  color:#fff;
  line-height: 100rpx;

}
.sharelist{
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 100%;
  height: 400rpx;
}
.sharelist button{
  width: 100%;
  border:none;
  background-color: #fff;
  height: 130rpx;
  line-height: 130rpx
}


canvas{
  position: fixed;
  top: 0;
  left: 400px;
}
.preview {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  position: absolute;
  top:0;
  z-index: 2;
}
.preview image{
  width: 80%;
  position: absolute;
  height: 84%;
  top: 4%;
  left: 10%;
  z-index: 3;
  border: 1px dashed #fff;
}
.preview button{
  width: 40%;
  position: absolute;
  bottom: 40rpx;
  left: 30%;
  background-color:#adaaad;
  color: #fff
  
}